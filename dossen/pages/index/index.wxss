/**index.wxss**/

.container {
  background: url("https://resource1.dongchenghotels.com/StaticFile/wxapp/index_bg.jpg") no-repeat;
  background-size: 100% auto;
}

.header {
  width: 100%;
  height: 400rpx;
  font-size: 0;
}

.cententIndex {
  margin: 0 auto;
  padding: 2% 5%;
  width: 80%;
  background-color: #fff;
  border-radius: 5px;
  box-shadow:1px 1px 20px #999;
}

.city {
  margin: 10rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.cityAddress {
  position: relative;
  padding: 2% 0;
  flex: 4;
  display: flex;
  align-items: center;
}

.cityAddress:after {
  content: "";
  position: absolute;
  top: 50%;
  right: 5%;
  margin-top: -3px;
  width: 6px;
  height: 6px;
  border: 1px solid;
  border-bottom: 0;
  border-right: 0;
  color: #ccc;
  transform: rotateZ(135deg);
}

.cityAddress view:nth-child(1) {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.cityAddress view:nth-child(1) image {
  width: 100%;
  height: 100%;
}

.cityAddress view:nth-child(2) text:nth-child(1) {
  color: #333;
  font:bold 34rpx/1.5 "Microsoft YaHei", Arial, Helvetica, sans-serif;
}

.cityAddress view:nth-child(2) text {
  display: block;
  font: 24rpx/1.5 "Microsoft YaHei", Arial, Helvetica, sans-serif;
  color: #c7c7c7;
}

.cityPosition {
  padding: 2%;
  margin-left: 10rpx;
  flex: 1;
  text-align: center;
}

.city>view:nth-child(2) view {
  margin: 0 auto;
  width: 30rpx;
  height: 30rpx;
}

.city>view:nth-child(2) view image {
  width: 100%;
  height: 100%;
}

.city>view:nth-child(2) text {
  display: block;
  font: 24rpx/1.5 "Microsoft YaHei", Arial, Helvetica, sans-serif;
  color: #666;
}

.date {
  position: relative;
  padding: 3% 0;
  margin: 10rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.date:after {
  content: "";
  position: absolute;
  top: 50%;
  right: 5%;
  margin-top: -3px;
  width: 6px;
  height: 6px;
  border: 1px solid;
  border-bottom: 0;
  border-right: 0;
  color: #ccc;
  transform: rotateZ(135deg);
}

.date>view:nth-child(1) {
  width: 40rpx;
  height: 35rpx;
  margin-right: 20rpx;
}

.date>view:nth-child(1) image {
  width: 100%;
  height: 100%;
}

.date>view:nth-child(2) {
  flex: 1;
}

.dateList>view text {
  font: bold 34rpx/1.5 "Microsoft YaHei", Arial, Helvetica, sans-serif;
  color: #333;
}

.dateList>view text:nth-child(2) {
  margin-left: 40rpx;
  font: 22rpx/1.2 "Microsoft YaHei", Arial, Helvetica, sans-serif;
  color: #c7c7c7;
}

button {
  margin: 50rpx 0 30rpx;
  width: 100%;
  font:30rpx/3 "Microsoft YaHei", Arial, Helvetica, sans-serif;
  background-color:#da004b;
  color:#fff;
}
.button-hover{
   background-color:#da004b;
   color:#fff;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  display: none;
  background: #000;
  opacity: 0.7;
}

.maskActive {
  display: block;
}

.maskDay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
  display: none;
  background-color: #fff;
}

.maskDayActive {
  display: block;
}

.maskDay text {
  display: block;
  text-align: center;
  font: 30rpx/2.4 "Microsoft YaHei", Arial, Helvetica, sans-serif;
  color: #333;
  border-bottom: 1px solid #eee;
}

.maskDay text:nth-child(1) {
  color: #999;
}

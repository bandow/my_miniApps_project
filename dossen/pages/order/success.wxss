/* pages/order/success.wxss */
page{
    height:100%;
}
.successTop{
    background-color:#fff;
    padding:10% 0;
    text-align:center;
}
.successTop view{
    margin:0 auto;
    width:100rpx;
    height:100rpx;
}
.successTop view image{
    width:100%;
    height:100%;
}
.successTop text{
    font:34rpx/2 "Microsoft YaHei", Arial, Helvetica, sans-serif;
    color:#2d2d2d;
}
.successFoot{
    margin-top:40rpx;
}
.successFoot>text{
    padding:0 5%;
    font:28rpx/2 "Microsoft YaHei", Arial, Helvetica, sans-serif;
    color:#666;
}
.successFootText{
     padding:5% 0;
     background-color:#fff;
}
.successFootText>view:nth-child(1){
    padding:0 5%;
    margin:0 50% 0 5%;
    background-color:#da0851;
    border-radius:0 30px 30px 0;
    font:28rpx/2 "Microsoft YaHei", Arial, Helvetica, sans-serif;
    color:#fff;
}
.successFootText>view:nth-child(1) text:nth-child(1){
    font-size:34rpx;
}
.successFootText>view:nth-child(2){
    margin:0 0 0 10%;
    padding-left:5%;
    font:28rpx/2 "Microsoft YaHei", Arial, Helvetica, sans-serif;
    color:#666;
    border-left:1px solid #da0851;
}
.successFootText>view:nth-child(3){
    padding:3%;
    margin:0 5%;
    background-color:#efefef;
    border-radius:5px;
}
.successFootText>view:nth-child(3) view{
    font:34rpx/1.5 "Microsoft YaHei", Arial, Helvetica, sans-serif;
    color:#2d2d2d;
    display: flex; 
    align-items: center;
}
.successFootText>view:nth-child(3) view:nth-child(1){
    margin-bottom:10rpx;
}
.successFootText>view:nth-child(3) view text{
    font:28rpx/1.5 "Microsoft YaHei", Arial, Helvetica, sans-serif;
    color:#999;
}
.successFootText>view:nth-child(3) view text:nth-child(1){
    flex:1;
}
.successFootText>view:nth-child(3) view text:nth-child(2){
    flex:3;
}
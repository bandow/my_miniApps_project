/* pages/order/orderCoupon.wxss */

.couponList {
  background-color: #fff;
  margin: 5%;
  border: 1px solid #dedede;
  border-radius: 5px;
}

.couponListTop {
  display: flex;
  align-items: center;
}

.couponListTop>view:nth-child(1) {
  flex: 1;
  text-align: center;
  padding:0 20rpx;
}

.couponListTop>view:nth-child(1) image {
  width: 100%;
  height: 100%;
}

.couponListTop>view:nth-child(2) {
  position: relative;
  padding: 20rpx 30rpx;
  flex: 4;
  border-left: 1px dashed #dedede;
}

.couponListTop>view:nth-child(2):before {
  position: absolute;
  top: -17.5rpx;
  left: -15.5rpx;
  content: "";
  display: block;
  width: 30rpx;
  height: 30rpx;
  background-color: #efefef;
  border-style: solid;
  border-width: 1px;
  border-color: #dedede #dedede #efefef #efefef;
  border-radius: 100%;
  transform: rotate(135deg);
}

.couponListTop>view:nth-child(2):after {
  position: absolute;
  bottom: -90rpx;
  left: -15.5rpx;
  content: "";
  display: block;
  width: 30rpx;
  height: 30rpx;
  background-color: #efefef;
  border-style: solid;
  border-width: 1px;
  border-color: #dedede #dedede #efefef #efefef;
  border-radius: 100%;
  transform: rotate(-45deg);
}

.couponListTop>view:nth-child(2) text {
  display: block;
  font: 34rpx/1.5 "Microsoft YaHei", Arial, Helvetica, sans-serif;
  color: #333;
}

.couponListTop>view:nth-child(2) text:nth-child(2) {
  display: block;
  font: 28rpx/1.5 "Microsoft YaHei", Arial, Helvetica, sans-serif;
  color: #999;
}

.couponListTop>view:nth-child(3) {
  padding: 0 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.couponListTop>view:nth-child(3) image {
  width: 100%;
  height: 100%;
}

.couponListFoot {
  background-color: #f7f7f7;
  padding: 2% 5%;
  border-radius: 0 0 5px 5px;
}

.couponListFoot text {
  font: 26rpx/1.5 "Microsoft YaHei", Arial, Helvetica, sans-serif;
  color: #999;
}

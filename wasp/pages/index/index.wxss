.container .header .bee-up{
  position:absolute;
  top:0;
  left:0;
  width:130rpx;
}
.container .header .bee-down{
  position:absolute;
  bottom:5rpx;
  right:0;
  width:130rpx;
}
.container .search input{
  height: 88rpx;
  padding-left:30rpx;
  padding-right:0;
  font-size: 38rpx;
  background:#fff;
  color:#a0a0a0;
  text-align:left;
}
.container .search view{
  position:absolute;
  top:0;
  right:0;
  width:98rpx;
  height:88rpx;
}
.container .search image{
  position:absolute;
  width:60rpx;
  height:auto;
  top:calc(50% - 30rpx);
  right:calc(50rpx - 30rpx);
}
.container .linkers-title{
  padding:30rpx 0 20rpx 85rpx;
  font-size:30rpx;
  font-weight:bold;
  color:#000;
}
.container .linkers{
  display:flex;
  justify-content: space-between;
  padding:0 85rpx;
}

.container .linkers image{
  width:100rpx;
  height:auto;
}
.container .linkers .linker-wrap{
  text-align:center;
  color:#333;
}
.container .linkers .linker-wrap text{
  font-size:24rpx;
  font-weight:bold;
}
.container .footerlogo{
  position:absolute;
  left:calc(50% - 210rpx);
  bottom:45rpx;
  width:420rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}

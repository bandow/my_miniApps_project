.container{
  position:relative;
  display:inherit;
  padding: 0;
  font-size: 14rpx;
  background: #fed426;
  color: #999999;
}
.container .header{
  position:relative;
  height:62vh;
  text-align:center;
  background:#fff;
}
.container .header .logoimg{
  display:block;
  padding-top:16vh;
  padding-bottom:0rpx;
  margin:auto;
  width:420rpx;
  height:auto;
}
.container .search{
  position:relative;
  margin:6vh 75rpx 0 75rpx;
  padding-right:98rpx;
  background: #fff;
  border:5rpx solid #fed426;
}
